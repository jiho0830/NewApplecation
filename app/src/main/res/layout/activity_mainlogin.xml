<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tool:context=".MainActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />


    <TextView
        android:id="@+id/TextView_loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_toutch"
        android:clickable="true"
        android:text="로그아웃"
        android:gravity="center">

    </TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/TextView_loginbutton"
        android:background="@drawable/btn_toutch"
        android:clickable="true"
        android:src="@drawable/iconfinder_food" />


    <TextView
        android:id="@+id/mainlogintext"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/Button_mainmenu"
        android:layout_alignParentBottom="true"
        android:background="#FFE2E2E2"
        android:clickable="true"
        />

    <Button
        android:id="@+id/Button_mainmenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/iconfinder_menu"
        />
</RelativeLayout>