<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="식당리뷰작성하기"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25sp" />


        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:src="@drawable/iconfinder_uploadphoto" />

        <EditText
            android:id="@+id/upload_title"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="#D7D7D7"
            android:hint="식당이름" />

        <AutoCompleteTextView
            android:id="@+id/upload_titleauto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="#D7D7D7"
            android:hint="식당이름auto" />


        <EditText
            android:id="@+id/upload_review"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#D7D7D7"
            android:hint="리뷰작성 (100자까지)" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <RatingBar
                android:id="@+id/upload_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_rating"
                android:layout_centerHorizontal="true"
                android:text="점"
                android:textSize="20dp" />

            <Button
                android:id="@+id/upload_uploadbutton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="1dp"
                android:paddingBottom="5dp"
                android:text="작성하기" />

            <Button
                android:id="@+id/upload_noloadbutton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="취소하기" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>




